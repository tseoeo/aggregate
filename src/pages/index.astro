---
import Base from '../layouts/Base.astro';
import IssueCard from '../components/IssueCard.astro';
import type { DailyIssue } from '../../scripts/lib/types';
import { readdirSync, readFileSync, existsSync } from 'fs';
import { join } from 'path';

// Load all issues
const issuesDir = join(process.cwd(), 'data', 'issues');
let issues: DailyIssue[] = [];

if (existsSync(issuesDir)) {
  const files = readdirSync(issuesDir)
    .filter(f => f.endsWith('.json'))
    .sort()
    .reverse();

  issues = files.map(file => {
    const content = readFileSync(join(issuesDir, file), 'utf-8');
    return JSON.parse(content) as DailyIssue;
  });
}
---

<Base title="Daily Summary">
  <div class="space-y-8">
    <section class="text-center">
      <h1 class="text-3xl font-bold">Daily Summary</h1>
      <p class="mt-2 text-gray-600 dark:text-gray-400">
        Curated highlights from Discord discussions
      </p>
    </section>

    {issues.length === 0 ? (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400">
          No summaries yet. Check back after the first daily update runs.
        </p>
      </div>
    ) : (
      <section class="space-y-4">
        {issues.map(issue => (
          <IssueCard issue={issue} />
        ))}
      </section>
    )}
  </div>
</Base>
