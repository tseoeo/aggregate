---
import type { DailyIssue } from '../../scripts/lib/types';

interface Props {
  issue: DailyIssue;
}

const { issue } = Astro.props;

// Get active channels
const activeChannels = issue.channels?.filter(c => c.status === 'active') || [];
const channelCount = issue.channels?.length || 0;

// Format date
const date = new Date(issue.date);
const formattedDate = date.toLocaleDateString('en-US', {
  weekday: 'short',
  month: 'short',
  day: 'numeric',
});
---

<a
  href={`/issue/${issue.date}`}
  class="block p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-blue-300 dark:hover:border-blue-600 hover:shadow-lg transition-all group"
>
  <div class="flex items-start justify-between gap-4">
    <div class="flex-1 min-w-0">
      <time class="text-sm text-gray-500 dark:text-gray-400" datetime={issue.date}>
        {formattedDate}
      </time>
      <h2 class="mt-1 text-lg font-semibold group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {issue.title}
      </h2>
      <div class="mt-2 flex items-center gap-4 text-sm text-gray-600 dark:text-gray-300">
        <span class="flex items-center gap-1">
          <span class="w-2 h-2 bg-green-500 rounded-full"></span>
          {activeChannels.length} active
        </span>
        <span class="text-gray-400">â€¢</span>
        <span>{issue.stats?.totalMessages || 0} messages</span>
      </div>
      {activeChannels.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-2">
          {activeChannels.slice(0, 4).map(ch => (
            <span class="px-2 py-0.5 text-xs font-mono bg-gray-100 dark:bg-gray-700 rounded">
              #{ch.channel}
            </span>
          ))}
          {activeChannels.length > 4 && (
            <span class="text-xs text-gray-400">
              +{activeChannels.length - 4} more
            </span>
          )}
        </div>
      )}
    </div>
    <svg
      class="w-5 h-5 text-gray-400 group-hover:text-blue-500 transition-colors flex-shrink-0"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </div>
</a>
